{{#if model}}
  <h2> Reminder List </h2>
  <ul>
    {{#each model as |reminder|}}
      <li >
        {{#link-to 'reminders.reminder' reminder.id class='spec-reminder-item'}}
        {{reminder.title}}
        {{/link-to}}
        <div>{{reminder.date}}</div>
      </li>
    {{/each}}
  </ul>
{{else}}
  <h2 id="spec-welcome-header"> Welcome to remEMBER</h2>
  <p> Please click below to add a new reminder to your list</p>
  <button>
    {{#link-to 'reminders.new' id='spec-create-new-reminder-btn'}}
      Create New Reminder
    {{/link-to}}
  </button>
{{/if}}
{{outlet}}
